<% content_for :title, 'Wszystkie kursy' %>
<% breadcrumb :courses %>

<% content_for :styles do %>
    <%= stylesheet_link_tag 'dashboard', 'data-turbolinks-track' => true %>
<% end %>

<%= render 'layouts/navbar' %>

<div class="container">
    <%= bootstrap_flash %>
    <%= render 'layouts/breadcrumb' %>
    <div class="row">
        <div class="col-xs-12">
          <h1>
            Wszystkie kursy
          </h1>
            <p>
              <%= link_to new_course_path do %>
                <span aria-hidden="true" class="glyphicon glyphicon-plus"></span>
                Dodaj kurs
              <% end %>
            </p>
            <div class="row-separator"></div>
        </div>
    </div>
    <div class="row">
        <% @courses.each do |c| %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <%= render 'course_card', course: c, path: 'add_user_course_path' %>
            </div>
        <% end %>
        <div class="col-xs-12 text-center"><%= will_paginate @courses, class: 'pagination-sm' %></div>
    </div>
</div>

<%= render 'layouts/footer' %>
