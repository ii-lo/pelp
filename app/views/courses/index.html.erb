<%= content_for :styles do %>
<%= stylesheet_link_tag 'dashboard', 'data-turbolinks-track' => true %>
<% end %>

<%= render 'layouts/navbar' %>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Wszystkie kursy</h1>
        </div>
    </div>
    <div class="row">
        <% @courses.each do |c| %>
        <%#= render 'course', course: c %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <%= link_to course_path(c), class: 'thumbnail course-card' do %>
            <div class="course-banner" style="background-color: <%= string_to_pastel "#{c.name}#{c.id}" %>"></div>
            <div class="caption">
                <h3><%= c.name %></h3>
                <% if c.description %>
                <p><%= c.description %></p>
                <% end %>
            </div>
            <% end %>
        </div>
        <% end %>
    </div>
    <div class="row text-center"><div class="col-xs-12"><%= will_paginate @courses, class: 'pagination-sm' %></div></div>
</div>

<%= render 'layouts/footer' %>
