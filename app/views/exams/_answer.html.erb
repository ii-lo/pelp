<div style="border: 1px dotted black">
  <p><%= answer.name %></p>
  <% unless answer.question.open? %>
    <p><%= answer.correct ? "P" : "F" %></p>
  <% end %>
  <p>
    <%= link_to "Usuń odpowiedź", question_answer_path(answer.question_id, answer), method: :delete,
        remote: true, data: { type: 'json' }, class: 'destroy-answer'%>
  </p>
</div>
