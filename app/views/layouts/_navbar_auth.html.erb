    <%= active_link_to current_user.name, user_path(current_user), wrap_tag: :li %>
    <%= active_link_to root_path, wrap_tag: :li, class: 'iconized', title: 'Ustawienia' do %> <%# TODO Link %>
        <i class="glyphicon glyphicon-cog"></i>
