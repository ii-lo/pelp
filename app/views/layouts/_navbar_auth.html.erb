<ul class="nav navbar-nav navbar-right">
    <%= active_link_to root_path, wrap_tag: :li, active: :exclusive do %>
        Strona główna
    <% end %>

    <li class="dropdown <%= active_link_to_class courses_path %>">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Kursy</a>
        <ul class="dropdown-menu dropdown-colors" role="menu">
