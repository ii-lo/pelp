            <% current_user.last_visited_courses(4).each do |c| %>
                <li class="<%= active_link_to_class course_path(c) %>">
                    <%= link_to course_path(c) do %>
                        <span class="glyphicon glyphicon-asterisk pull-right" style="color: <%= string_to_pastel("#{c.name}#{c.id}") %>"></span>
                        <%= c.name %>
