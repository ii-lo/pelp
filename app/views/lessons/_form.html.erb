<%= simple_form_for [@course, @lesson] do |f| %>
  <%= f.input :name, label: "Nazwa" %>
  <%= f.input :lesson_category_id, label: "Kategoria", collection: @course.lesson_categories %>
  <%= f.input :content, label: "Treść", as: :text, input_html: {rows: "10", data: {provide: :markdown, language: :pl}} %>
  <%= f.button :submit, submit || "Zatwierdź" %>
<% end %>
