<section class="row">
  <div class="jumbotron">
    <div class="container-fluid">
      <%= content_for :scripts do %>
        <%= javascript_include_tag 'jquery' %>
        <%= javascript_include_tag 'bootstrap' %>
      <% end %>
      <%= content_for :styles do %>
        <%= stylesheet_link_tag 'index' %>
      <% end %>
      <div class="row">
        <div class="col-xs-12 col-md-8">
          <h1>Public E-Learning Platform</h1>

          <p class="jumbo-text text-justify"><strong>PELP</strong> - to publiczna platforma do e-learningu.
          Nauczanie
          elektroniczne może służyć
          zarówno do publikacji materiałów dla szerokiego grona osób, jak i do przeprowadzania
          rozbudowanych
          sprawdzaniów lub do stworzenia możliwości komunikacji między uczniem a nauczycielem.
          </p>
        </div>
        <div class="col-xs-12 col-md-4">
          <%= form_for User.new do |f| %>
            <div class="form-group">
              <%= f.text_field :email, placeholder: "Email", class: "form-control", required: true, pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
            </div>
            <div class="form-group">
              <%= f.text_field :name, placeholder: "Imię i nazwisko", class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <div class="form-group">
                <%= f.password_field :password, placeholder: "Hasło", class: "form-control", required: true %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, placeholder: "Potwierdzenie hasła", class: "form-control", required: true %>
              </div>
              <span class="help-block">Minimum 6 znaków.</span>
            </div>
            <div class="form-group">
              <%= f.submit "Zarejestruj się w PELP", class: "btn btn-success btn-lg btn-block" %>
              <span class="help-block">Rejestrując się w serwisie akceptujesz nasz <a
                  href="#">regulamin</a> oraz <a href="#">politykę prywatności</a>.</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
