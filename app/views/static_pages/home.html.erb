<%= content_for :styles do %>
<%= stylesheet_link_tag 'home', 'data-turbolinks-track' => true %>
<% end %>

<div class="container">
    <div class="row row-separator hidden-xs"></div>
    <div class="row">
        <nav id="home-navbar" class="navbar navbar-default">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li><%= link_to "", root_path, class: "navbar-brand icon icon-pelp-logo" %></li>
                </ul>
                <div class="navbar-right">
                    <%= link_to "Zaloguj się", new_user_session_path, class: "btn btn-primary btn-sm navbar-btn" %>
                </div>
            </div>
        </nav>
    </div>

    <div class="row"><%= bootstrap_flash %></div>
</div>

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div id="home-welcome-box">
                    <h1>Public E-Learning Platform</h1>
                    <p class="text-justify"><strong>PELP</strong> - to publiczna platforma do e-learningu. Nauczanie elektroniczne może służyć zarówno do publikacji materiałów dla szerokiego grona osób, jak i do przeprowadzania rozbudowanych sprawdzaniów lub do stworzenia możliwości komunikacji między uczniem a nauczycielem.</p>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <%= form_for User.new, html: { id: 'new-user-form' } do |f| %>
                <div class="form-group">
                    <%= f.text_field :name, placeholder: "Imię i nazwisko", class: "form-control", required: true %>
                </div>
                <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control", required: true, pattern: '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, placeholder: "Hasło", class: "form-control", required: true %>
                    <span class="help-block">Minimum 6 znaków.</span>
                </div>
                <div class="form-group">
                    <%= f.submit "Zarejestruj się w PELP", class: "btn btn-success btn-lg btn-block" %>
                    <span class="help-block">Rejestrując się w serwisie akceptujesz nasz <a href="#">regulamin</a> oraz <a href="#">politykę prywatności</a>.</span>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= render 'layouts/footer', classes: 'no-border' %>
